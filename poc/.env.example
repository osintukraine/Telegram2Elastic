# Telegram API Configuration
# Get these from https://my.telegram.org
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+1234567890
TELEGRAM_SESSION_NAME=osint_archive

# Together.ai API Configuration
# Get your API key from https://together.ai
TOGETHER_API_KEY=your_together_api_key_here

# Database Configuration
DATABASE_URL=postgresql://osint:osint_password@localhost:5432/osint_archive

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=osint-archive
MINIO_SECURE=false

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Configuration (optional)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Enrichment Configuration (optional)
# Enable/disable specific enrichment features
ENABLE_SPAM_FILTER=true
ENABLE_LLM_CLASSIFICATION=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_GEO_EXTRACTION=true
ENABLE_ENGAGEMENT_METRICS=true

# LLM Configuration (optional)
LLM_MODEL=meta-llama/Llama-3.1-70B-Instruct-Turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# Spam Filter Thresholds (optional)
SPAM_CONFIDENCE_THRESHOLD=0.85
MIN_OSINT_SCORE=30

# Processing Configuration (optional)
MAX_CONCURRENT_ENRICHMENTS=5
ENRICHMENT_TIMEOUT_SECONDS=30
